{
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Catppuccin Macchiato",
  "terminal.explorerKind": "both",
  "editor.fontSize": 14,
  "vim.leader": ",",
  "vim.easymotion": true,
  "vim.surround": true,
  "vim.vimrc.enable": true,
  "terminal.integrated.fontFamily": "RobotoMono Nerd Font Mono",
  "terminal.integrated.fontSize": 14,
  "editor.formatOnSave": true,
  "editor.fontFamily": "RobotoMono Nerd Font Propo,Menlo, Monaco, 'Courier New', monospace",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.minimap.enabled": false,
  "editor.wordWrap": "on",
  "editor.cursorBlinking": "phase",
  // defaults write com.microsoft.VSCode ApplePressAndHoldEnabled -bool false -> to disable press and hold

  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "e", "e"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    }
  ]
}
